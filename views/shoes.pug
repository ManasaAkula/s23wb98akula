extends layout

block content
  h1= title
  - var results = shoes;
  div(class="container_fluid")
    each item,index in results
        div(class="row" onclick=`buy(${index})`)       
            div(class="col-sm-2") #{item.shoes_type}
            div(class="col-sm-2") #{item.shoes_name}
            div(class="col-sm-2") #{item.shoes_cost}
  script.
      function buy(indexnumber){
        alert('You purchased item '+ indexnumber)
      }          